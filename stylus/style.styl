// Variables
sans-serif-font = -apple-system, BlinkMacSystemFont, "Segoe UI", "Fira Sans", sans-serif
header-height = 3rem
default-font-size = 20px
gradient-beginning = #fafafa
gradient-end = #fff
light-shade = #bbb
dark-shade = #777
shelf-blue = rgb(58,167,196)
shelf-blue-border = rgb(150,207,223)
grey-text = rgb(148,151,153)

// Box Sizing Fix
html
	box-sizing: border-box

*, *:before, *:after
	box-sizing: inherit

// MS Viewport Fix
@-ms-viewport
	width: device-width

// General
html, body
	font: default-font-size sans-serif-font
	// height: 100%
	padding: 0

header
	height: header-height
	border-bottom: .05rem solid light-shade
	padding: 0 1rem
	background-color: #fff
	display: flex
	justify-content: space-between
	position: fixed
	top: 0
	left: 0
	width: 100%

.header-tabs-container
	display: flex
	flex-direction: column
	height: header-height
	font-size: .625rem
	font-weight: 600
	color: grey-text

.header-tabs
	display: flex
	p
		margin: 0
		padding-bottom: .5em
		&:first-of-type
			margin-right: 1rem
			border-bottom: .1rem solid grey-text

main
	background: linear-gradient(to bottom, gradient-beginning, gradient-end)
	display: flex
	flex-direction: column
	justify-content: space-around
	margin-top: header-height + .5rem

section
	.section-header
		padding-left: .5rem
		h2
			font-size: .75rem
			color: grey-text
	.issue-bar
		display: flex
		overflow: auto
		.issue-box
			margin: .5rem
			font-size: .625rem
			color: grey-text
			// width: 30vw
			// max-width: 20rem
			.issue-cover
				width: 30vw
				max-width: 13rem
				height: @width * 1.53
				max-height: @max-width * 1.53
				border: .05rem solid light-shade
			p
				margin: 0
				line-height: 1.6em
			.issue-title
				font-weight: 600


footer
	display: flex
	justify-content: center
	border-top: .05rem solid light-shade
	background-color: gradient-beginning
	position: fixed
	bottom: 0
	left: 0
	width: 100%

.button
	height: header-height - .5rem
	border: .05rem solid light-shade
	margin: .5rem
	line-height: @height
	font-weight: bold
	font-size: .6875rem
	flex-grow: 1
	text-align: center
	max-width: 15rem
	&:hover
		cursor: pointer

#login
	background-color: shelf-blue
	border-color: shelf-blue-border
	color: white
	margin-right: .25rem

#signup
	background-color: white
	color: grey-text
	margin-left: .25rem

h1
	font-weight: normal
	text-transform: lowercase
	margin: 0
	line-height: header-height
	font-size: 1rem

// Miscellaneous
.spacer
	flex-grow: 1
