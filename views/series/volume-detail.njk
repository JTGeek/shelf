{% extends '_skeletons/page.njk' %}

{% block content %}
	<h2>{{ series.title }} Vol. {{ series.volume }}</h2>
	<ul class="issues">
		{% for issue in issues %}
			<li>
				<a href="/series/{{ issue.series.slug }}/vol/{{ issue.series.volume }}/{{ issue.number }}">
					<a href="/series/{{ issue.series.slug }}/vol/{{ issue.series.volume }}/{{ issue.number }}">
						<span class="number">#{{ issue.number }}</span>
						<span class="issue-title">"{{ issue.title }}"</span>
						<span class="writer-name">{{ issue.team.writer.name.first }} {{ issue.team.writer.name.last }}</span>
						<span class="artist-name">{{ issue.team.artist.name.first }} {{ issue.team.artist.name.last }}</span>
						<span class="date">Published <span class="isoDate">{{ issue.publicationDate }}</span></span>
						<span class="want-have">{{ issue.collectionStatus }}</span>
					</a>
				</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
