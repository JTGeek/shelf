// General
html,body
	font-size: 100%

// Section Title
.section-title
	background: purple
	padding: 1em
	h2
		color: white
		margin: 0
		font-size: .9rem;
		font-weight: 400;
	a
		color: white
		&:hover
			text-decoration: none

// Section Content
.section-content
	padding: 1em
	h3
		margin: 0

a
	color: #000
	&:link
		text-decoration: none
	&:hover, &:active
		text-decoration: underline

// Global Classes
.isoDate
	display: none

.addMore,
.removeRow
	&:hover
		cursor: pointer

