.detail-header
	color: white
	z-index: 1
	position: relative
	display: block
	height: 20em
	overflow: hidden
	// Overlay
	&:before
		content: ""
		position: absolute
		left: 0
		right: 0
		z-index: -1
		display: block
		background-image: url('/images/resources/spider-man.jpg')
		width: 100%
		height: 20em
		filter: brightness(20%)
		background-attachment: fixed;
		background-position: center;

	.detail-header-content
		padding: 1em
		// Title
		h2
			color: white
			margin: 0
		// Publisher
		.publisher
			font-size: 1em
			font-weight: bold
			display: block
			color: white

	.detail-header-status
		margin: 0 1em 0 0
		display: flex
		justify-content: flex-end
		align-items: flex-end

		// Want / Have Button: DEFAULT STATE
		.want-have-default
			border: 3px solid white
			border-radius: .2em
			// width: 4rem
			display: flex
			justify-content: space-between
			align-items: center
			text-align: center
			cursor: pointer
			// Want (Heart)
			.want
				background: transparent
				padding: .5em 0 .5em 0
				img
					width: 2em
			// Have (Checkmark)
			.have
				display: none
				background: transparent
			// Arrow
			.arrow
				flex-grow: 2
				color: white

		// Want / Have Button: EXPANDED STATE
		.want-have-select
			border: 3px solid white
			border-radius: .2em
			display: flex
			justify-content: space-between
			align-items: center
			text-align: center
			cursor: pointer
			// Want (Heart)
			.want
				width: 4em
				background: red
				padding: .5em 0 .5em 0
				transition: 180ms ease background
				&:hover
					background: darken(red, 15%)
				img
					width: 2em
			// Have (Checkmark)
			.have
				width: 4em
				display: block
				background: teal
				padding: .5em 0 .5em 0
				transition: 180ms ease background
				i
					font-size: 2em
					color: white
				&:hover
					background: darken(teal, 15%)
			// Close
			.close
				width: 4em
				display: block
				background: black
				padding: .5em 0 .5em 0
				transition: 180ms ease background
				&:hover
					background: darken(black, 15%)
				i
					font-size: 2em
					color: white

		// Want / Have Button: EXPANDED STATE
		.want-selected
			background: red
			border-radius: .2em
			display: flex
			justify-content: space-between
			align-items: center
			text-align: center
			cursor: pointer
			padding: .8em
			transition: 180ms ease background
			img
				width: 2em
				margin-right: .5em
			span
				color: white
				font-weight: bold
			&:hover
				text-decoration: none
				background: darken(red, 15%)

		// Want / Have Button: EXPANDED STATE
		.have-selected
			background: teal
			border-radius: .2em
			display: flex
			justify-content: space-between
			align-items: center
			text-align: center
			cursor: pointer
			padding: .8em
			transition: 180ms ease background
			i
				font-size: 2em
				margin-right: .5em
				color: white
			span
				color: white
				font-weight: bold
			&:hover
				text-decoration: none
				background: darken(teal, 15%)
