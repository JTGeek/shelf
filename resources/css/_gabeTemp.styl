p.home-buttons
	text-align: center
	padding: 1rem

a.button
	background-color: teal
	color: white
	font-size: 1.6rem
	font-weight: bold
	padding: .75rem
	margin: .75rem
	margin-top: 20rem
	text-decoration: none
	border-radius: .3em

.mini-block-container
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	padding: .5rem
	div
		flex: 1 1 25rem
		margin: .5rem
		border: 1px solid teal
		border-radius: .5rem .5rem 0 0
		h3
			background-color: teal
			line-height: 1.6em
			padding: .5rem
			border-radius: .25rem .25rem 0 0
			margin: 0
			a
				text-decoration: none
				color: white
		ul
			list-style-type: none
			padding: 0
			margin: 0
			li
				display: flex
				justify-content: space-between
				padding: .5rem
				a
					margin-right: .5rem
					&:last-of-type
						margin-right: 0
					&:nth-of-type(2)
						flex-grow: 1
